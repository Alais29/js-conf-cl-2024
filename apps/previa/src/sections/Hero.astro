---
import { DateInfoHome, RadiusGradientFrame } from '@components';
---

<section class="hero">
  <div class="hero-info">
    <h1>Previa 2024</h1>
    <img src="/assets/JSCONF-black.svg" alt="La Previa - JSConf Chile" />
  </div>
  <div class="hero-date-desktop">
    <DateInfoHome left="Fecha" right={'Octubre 12, 2024'} filled position="first" />
    <DateInfoHome left="M치s de" right={'10 charlistas'} filled position="second" />
    <DateInfoHome left="Hora" right={'Desde las 09:00hrs Chile'} filled position="third" />
    <DateInfoHome right="Torres del Paine - Regi칩n del Magallanes" position="fourth" />
  </div>
  <div class="hero-date-mobile">
    <RadiusGradientFrame class="date-info">
      <span>M치s de</span> 10 charlistas
    </RadiusGradientFrame>
    <RadiusGradientFrame class="date-info">
      <span>Fecha</span> Octubre 12, 2024
    </RadiusGradientFrame>
    <RadiusGradientFrame class="date-info">
      <span>Hora</span> Desde las 09:00hrs Chile
    </RadiusGradientFrame>
    <p>Torres del Paine - Regi칩n del Magallanes</p>
  </div>
</section>
<style>
  .hero {
    display: flex;
    align-items: center;
    padding: 4.5rem 3.45rem 0;

    & .hero-info {
      width: 40%;

      & h1 {
        text-transform: uppercase;
        font-weight: 600;
        color: var(--yellow);
        background-color: var(--black);
        width: fit-content;
        padding: 1rem 1.5rem;
        border-radius: 0.5rem;
      }
    }

    & .hero-date-desktop {
      width: 60%;
      height: 554px;
      position: relative;
      background-image: url(/assets/img/torres-del-paine.avif);
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      color: var(--white);

      &::after {
        content: '';
        position: absolute;
        inset: 0;
        background-image: radial-gradient(circle, transparent 25%, var(--bg-color) 68%);
      }
    }

    .hero-date-mobile {
      display: none;
    }
  }

  @media (width <= 768px) {
    .hero {
      flex-direction: column-reverse;
      padding: 4rem 0;
      gap: 4rem;

      & .hero-info {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        & img {
          max-width: 15rem;
        }

        & p {
          max-width: 20.5rem;
          text-align: center;
        }
      }

      & .hero-date-mobile {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        position: relative;
        width: 100dvw;
        height: 30rem;
        background-image: url(/assets/img/torres-del-paine.avif);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;

        & .date-info {
          width: fit-content;
          padding: 0.5rem 1rem;
          font-family: monospace;
          font-size: 1.2rem;

          --shadow: 0px 4px 85.3px rgba(64, 64, 64, 0.1);
          --radius: 10px;
          --border-width: 2px;
          --border-color: linear-gradient(
            90deg,
            #090907 46.45%,
            #1d1b0e 63.08%,
            #413e21 78.39%,
            #aaa255 86.07%
          );
          background:
            linear-gradient(0, var(--black), var(--black)) padding-box,
            var(--gradient-2) border-box;

          & span {
            color: var(--yellow);
          }
        }

        & p {
          font-family: monospace;
          position: absolute;
          bottom: 0;
          color: var(--black);
        }
      }

      & .hero-date-desktop {
        display: none;
      }
    }
  }
</style>
