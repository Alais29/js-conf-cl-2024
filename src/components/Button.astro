---
import { Icon } from 'astro-icon/components';

type ButtonMode =
  | 'solid-white'
  | 'solid-yellow'
  | 'stroke-white'
  | 'stroke-yellow'
  | 'ghost-white'
  | 'ghost-yellow'
  | 'icon-white'
  | 'icon-yellow';

type ButtonSize = 'fit' | 'large' | 'full';

interface Props {
  mode?: ButtonMode;
  link: string;
  icon?: string;
  size?: ButtonSize;
}

const { mode = 'solid-yellow', link, icon = 'none', size = 'fit' } = Astro.props;
---

<a href={link} class:list={['button', mode, size]}>
  {
    icon === 'none' ? (
      <slot />
    ) : (
      <>
        <slot />
        <Icon name={icon} size="16" />
      </>
    )
  }
</a>

<style>
  .button {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 6px;
    font-weight: 600;
    padding: 0.5rem 1rem;
    cursor: pointer;
    transition: ease-in-out 0.2s;
    text-decoration: none;
  }

  /* SIZE */

  .fit {
    max-width: fit-content;
  }

  .large {
    width: 13rem;
  }

  /* Usar esta clase solo en dispositivos m√≥viles */

  .full {
    width: 100%;
  }

  /* MODE */

  .solid-yellow {
    background: var(--yellow);
    color: var(--black);

    &:hover {
      background: var(--yellow-100);
    }
  }

  .solid-white {
    background: var(--white);
    color: var(--black);

    &:hover {
      background: var(--gray-50);
    }
  }

  .stroke-white {
    background: none;
    border: 1px solid var(--white);
    color: var(--white);

    &:hover {
      background: var(--white-disable);
      color: var(--black);
    }
  }

  .stroke-yellow {
    background: none;
    border: 1px solid var(--yellow);
    color: var(--white);

    &:hover {
      background: var(--yellow-400);
      color: var(--black);
    }
  }

  .ghost-white {
    background: none;
    border: 0;
    color: var(--white);

    &:hover {
      background: var(--white-disable);
    }
  }

  .ghost-yellow {
    background: none;
    border: 0;
    color: var(--yellow);

    &:hover {
      background: var(--yellow-400);
    }
  }
</style>
