---
import ContentTab1 from '@components/ContentTab-1.astro';
import ContentTab2 from '@components/ContentTab-2.astro';
import ContentTab3 from '@components/ContentTab-3.astro';
import TabsSchedule from '@components/TabsSchedule.astro';
import Layout from '@layouts/Layout.astro';
---

<Layout title="JSConf Chile Agenda">
  <main>
    <h1 class="title-page">AGENDA DE LA CONFERENCIA</h1>
    <p class="description-page">
      Lorem ipsum dolor sit amet consectetur. Eget eget eu imperdiet quis molestie nulla.
    </p>
    <TabsSchedule
      data={[
        {
          status: 'open',
          Content: ContentTab1,
          triggerTitle: 'Viernes 00 Nov'
        },
        {
          status: 'closed',
          Content: ContentTab2,
          triggerTitle: 'SÃ¡bado 00 Nov'
        },
        {
          status: 'closed',
          Content: ContentTab3,
          triggerTitle: 'Domingo 00 Nov'
        }
      ]}
    />
  </main>
</Layout>

<style>
  .title-page {
    color: var(--white);
    font-family: Barlow;
    font-size: 48px;
    font-weight: 700;
    line-height: 61.5px;
    letter-spacing: -0.012em;
    text-align: center;
    position: relative;

    &::before {
      content: '';
      background: radial-gradient(
        43.41% 43.41% at 50% 50%,
        rgba(92, 92, 92, 0.5) 0%,
        rgba(63, 63, 59, 0) 100%
      );
      width: 100%;
      height: 100%;
      position: absolute;
      inset: 0;
      z-index: -1;
      border-radius: 9999px;
    }
  }
  .description-page {
    font-family: Barlow;
    font-size: 16px;
    font-weight: 400;
    line-height: 28px;
    text-align: center;
    color: var(--white);
  }
</style>
