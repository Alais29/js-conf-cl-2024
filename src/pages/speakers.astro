---
import HeroSpeakers from '@sections/charlistas/HeroSpeakers.astro';
import SpeakersTab from '@sections/charlistas/SpeakersTab.astro';
import WorkshopsTab from '@sections/charlistas/WorkshopsTab.astro';
import TabsSchedule from '@components/TabsSchedule.astro';
import Layout from '@layouts/Layout.astro';
---

<Layout title="JSConf Chile 2024">
  <HeroSpeakers />
  <TabsSchedule
    data={[
      {
        status: 'open',
        Content: SpeakersTab,
        triggerTitle: 'Charlistas'
      },
      {
        status: 'closed',
        Content: WorkshopsTab,
        triggerTitle: 'Workshops'
      }
    ]}
  />
</Layout>
